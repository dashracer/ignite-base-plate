// Welcome in, the waters fine.
import '../services/reactotron'
import { AppRegistry } from 'react-native'
import { RootComponent } from './root-component'
<% if (props.storybooks === true) { %>import { StorybookUIRoot } from '../../storybook' <% } %>

/**
 * This needs to match what's found in your app_delegate.m and MainActivity.java.
 */
const APP_NAME = '<%= props.name %>'

<% if (props.storybooks === true) { %>
// Should we show storybook instead of our app?
//
// ⚠️ Leave this as `false` when checking into git.
const SHOW_STORYBOOK = false

if (SHOW_STORYBOOK && __DEV__) {
  // 🎗 REMINDER: Storybook has a server you need to run from a terminal window.
  //
  // $> yarn run storybook
  //
  AppRegistry.registerComponent(APP_NAME, () => StorybookUIRoot)
} else {<% } %>
  // load our app
  AppRegistry.registerComponent(APP_NAME, () => RootComponent)
<% if (props.storybooks === true) { %> } <% } %>

